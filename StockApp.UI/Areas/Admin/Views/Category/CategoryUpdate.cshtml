
@{
    ViewBag.Title = "CategoryUpdate";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model StockApp.UI.Areas.Admin.Models.DTO.CategoryDTO

<div class="content-wrapper" style="min-height: 946px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">

        <ol class="breadcrumb">
            <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
            <li><a href="/Admin/Category/CategoryAdd">Add Category</a></li>
            <li><a href="/Admin/Category/CategoryList">Category List</a></li>
            <li class="active">Update Category</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-6">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Category Update</h3>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form action="/Admin/Category/CategoryUpdate" method="post" enctype="multipart/form-data" role="form">
                        <div class="box-body">
                            <div class="form-group">
                                <label for="text">Category Name</label>
                                <input type="text" class="form-control" name="Name" value="@Model.Name" placeholder="Category Name" />
                            </div>
                            <div class="form-group">
                                <label for="text">Description</label>
                                <input type="text" class="form-control" name="Description" value="@Model.Description" placeholder="Description" />
                            </div>

                        </div>
                        <!-- /.box-body -->
                        <input type="text" style="visibility:hidden" name="ID" value="@Model.ID" />
                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>

            </div>

        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
